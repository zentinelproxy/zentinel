// Sentinel Proxy Configuration for Docker Benchmarking
// Simple config for performance testing

server {
    worker-threads 0  // auto-detect CPU cores
    max-connections 10000
    graceful-shutdown-timeout-secs 30
}

listeners {
    listener "http" {
        address "0.0.0.0:8080"
        protocol "http"
        request-timeout-secs 60
    }
}

// Simple routes for benchmarking (no agents/filters for pure proxy performance)
routes {
    // Health check endpoint
    route "health" {
        priority "high"
        matches {
            path "/health"
        }
        builtin-handler "health"
        policies {
            timeout-secs 5
            failure-mode "open"
        }
    }

    // Main route - direct proxy to backend
    route "default" {
        priority "low"
        matches {
            path-prefix "/"
        }
        upstream "backend"
        policies {
            timeout-secs 30
            failure-mode "open"
        }
    }
}

upstreams {
    upstream "backend" {
        target "backend:80" weight=1
        load-balancing "round_robin"
    }
}

limits {
    max-header-size-bytes 8192
    max-header-count 100
    max-body-size-bytes 10485760
}

observability {
    metrics {
        address "0.0.0.0:9090"
        path "/metrics"
    }
    logging {
        level "info"
        format "json"
    }
}
